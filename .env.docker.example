# Stocky - Docker Environment Configuration (Simplified)
# Copy this file to .env and update the values

# Application
APP_NAME=Stocky
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=http://localhost:8000
APP_PORT=8000

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=stocky
DB_USERNAME=stocky_user
DB_PASSWORD=changeme_secure_password

# Cache Configuration (file-based)
CACHE_DRIVER=file
CACHE_PREFIX=stocky_cache

# Session Configuration (file-based)
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null
SESSION_SECURE_COOKIE=false

# Queue Configuration (synchronous - no background processing)
QUEUE_CONNECTION=sync

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@stocky.local
MAIL_FROM_NAME="${APP_NAME}"

# Passport OAuth2 Configuration
# Generate these with: php artisan passport:install
PASSPORT_PERSONAL_ACCESS_CLIENT_ID=
PASSPORT_PERSONAL_ACCESS_CLIENT_SECRET=

# SMS Gateway Configuration (Twilio)
TWILIO_SID=
TWILIO_TOKEN=
TWILIO_FROM=

# SMS Gateway Configuration (Nexmo/Vonage)
NEXMO_KEY=
NEXMO_SECRET=
NEXMO_FROM=

# SMS Gateway Configuration (InfoBip)
INFOBIP_API_KEY=
INFOBIP_BASE_URL=
INFOBIP_FROM=

# Payment Gateway (Stripe)
STRIPE_KEY=
STRIPE_SECRET=

# File Upload Limits
UPLOAD_MAX_FILESIZE=100M
POST_MAX_SIZE=100M

# Logging
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Broadcasting
BROADCAST_DRIVER=log

# Timezone
APP_TIMEZONE=UTC

# Locale
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# Maintenance Mode
MAINTENANCE_MODE=false

# Asset URL (for CDN)
ASSET_URL=

# Mix (Frontend Build)
MIX_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
MIX_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"
